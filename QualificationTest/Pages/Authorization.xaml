<Page x:Class="QualificationTest.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QualificationTest"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="loginTB" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" Height="30" Margin="20,50,0,0"/>
        <PasswordBox x:Name="passwordTB" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" Height="30" Margin="20,-50,0,0"/>
        <Button x:Name="LoginButton" Content="Вход" FontSize="18" Click="LoginButton_Click" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" Height="40" Margin="20,-50,0,0" />
    </Grid>
</Page>
